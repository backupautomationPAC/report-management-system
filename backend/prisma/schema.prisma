// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(AE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  submittedReports    Report[] @relation("SubmittedBy")
  aeApprovedReports   Report[] @relation("AEApprovedBy")
  supervisorApprovedReports Report[] @relation("SupervisorApprovedBy")
  accountingApprovedReports Report[] @relation("AccountingApprovedBy")

  @@map("users")
}

model Report {
  id                    Int      @id @default(autoincrement())
  clientName           String
  reportPeriod         String
  startDate            DateTime
  endDate              DateTime
  content              String?
  filePath             String?
  status               ReportStatus @default(DRAFT)

  // Timestamps
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Submitted by
  submittedById        Int
  submittedBy          User     @relation("SubmittedBy", fields: [submittedById], references: [id])

  // AE Approval
  aeApprovedById       Int?
  aeApprovedBy         User?    @relation("AEApprovedBy", fields: [aeApprovedById], references: [id])
  aeApprovedAt         DateTime?

  // Supervisor Approval
  supervisorApprovedById Int?
  supervisorApprovedBy   User?  @relation("SupervisorApprovedBy", fields: [supervisorApprovedById], references: [id])
  supervisorApprovedAt   DateTime?

  // Accounting Approval
  accountingApprovedById Int?
  accountingApprovedBy   User?  @relation("AccountingApprovedBy", fields: [accountingApprovedById], references: [id])
  accountingApprovedAt   DateTime?

  @@map("reports")
}

model HarvestCache {
  id          Int      @id @default(autoincrement())
  clientName  String
  projectName String
  taskName    String
  hours       Float
  date        DateTime
  notes       String?
  userName    String
  cachedAt    DateTime @default(now())

  @@map("harvest_cache")
}

enum Role {
  AE
  SUPERVISOR
  ACCOUNTING
  ADMIN
}

enum ReportStatus {
  DRAFT
  PENDING_SUPERVISOR
  PENDING_ACCOUNTING
  APPROVED
  REJECTED
}
